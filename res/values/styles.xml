<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="CameraControls">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="Theme.GalleryBase" parent="@android:style/Theme.Holo">
<!--         <item name="listPreferredItemHeightSmall">?android:listPreferredItemHeightSmall</item>
        <item name="switchStyle">@android:style/Widget.CompoundButton</item> -->
    </style>
    <style name="Theme.Gallery" parent="@style/Theme.GalleryBase">
        <item name="android:colorBackground">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:actionBarStyle">@style/Holo.ActionBar</item>
        <item name="android:displayOptions"></item>
    </style>
    <style name="Holo.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar_translucent</item>
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:backgroundStacked">@null</item>
    </style>
    
    <style name="Theme.Camera" parent="@style/Theme.CameraBase">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackgroundCacheHint">@android:color/black</item>
    </style>
    
    <style name="Theme.CameraBase" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen" />
</resources>
